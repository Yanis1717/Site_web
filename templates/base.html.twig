<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Portfolio{% endblock %}</title>

    <!-- Bootswatch Lux -->
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css" rel="stylesheet">
    
    <!-- CSS personnalis√© -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">

    <style>
    

    .fond {
    /* Un d√©grad√© subtil du bleu clair vers le gris */
    background: linear-gradient(135deg, #f5f7fa 0%, #6190dbff 100%); /* Couleur de fond d√©grad√©e */
    
    /* Fixe le fond pour qu'il ne bouge pas quand on scrolle */
    background-attachment: fixed;
    background-size: cover;
    min-height: 100vh;
    }




    .navbar-custom {
    background: #5e84c0ff !important; /* Couleur de la Navbar */
    backdrop-filter: blur(10px);               /* Effet de flou √† l'arri√®re */
    border-bottom: 1px solid rgba(255, 255, 255, 0.1); /* Ligne subtile en bas */
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);     /* L√©g√®re ombre */
    }






    button {
    padding: 15px 25px;
    border: unset;
    border-radius: 15px;
    color: #ffffff;
    z-index: 1;
    background: #000000;
    position: relative;
    font-weight: 1000;
    font-size: 17px;
    transition: all 250ms;
    overflow: hidden;
    }

    button::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 0;
    border-radius: 15px;
    background-color: #ffffff;
    z-index: -1;
    transition: all 250ms
    }

    button:hover {
        /* On force la couleur du texte en bleu (ou noir #000) pour qu'il se voie sur le fond blanc */
        color: #5e84c0 !important; 
        
        /* Optionnel : ajoute une bordure pour bien d√©limiter le bouton */
        border: 1px solid #5e84c0; 
    }

    button:hover::before {
    width: 100%;
    }



    </style>
</head>
<body class="fond">
<div class="wrapper d-flex flex-column min-vh-100">

    <!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">Portfolio</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item me-2">
                    <button class="btn btn-outline-light" type="button" onclick="location.href='{{ path('app_home') }}'">Accueil</button>
                </li>

                <li class="nav-item me-2">
                    <button class="btn btn-outline-light" type="button" onclick="location.href='{{ path('app_loisirs') }}'">Loisirs</button>
                </li>

                <li class="nav-item me-2">
                    <button class="btn btn-outline-light" type="button" onclick="location.href='{{ path('app_cv') }}'">CV</button>
                </li>

                <li class="nav-item me-2">
                    <button class="btn btn-outline-light" type="button" onclick="location.href='{{ path('app_portfolio') }}'">Mes Projets</button>
                </li>

                <li class="nav-item me-2">
                    <button class="btn btn-outline-light" type="button" onclick="location.href='{{ path('app_inscription') }}'">Inscription</button>
                </li>
            </ul>
        </div>
    </div>
</nav>


    <!-- Contenu principal -->
    <div class="content container flex-grow-1 my-5">
        {% block body %}{% endblock %}
    </div>

    <!-- Footer sticky -->
    {% include '_footer.html.twig' %}

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
</script>

<script>
    // 1. La s√©quence secr√®te (Codes des touches du clavier)
    const secretCode = [
        'ArrowUp', 'ArrowUp', 
        'ArrowDown', 'ArrowDown', 
        'ArrowLeft', 'ArrowRight', 
        'ArrowLeft', 'ArrowRight', 
        'b', 'a'
    ];

    // 2. On stocke les touches appuy√©es par l'utilisateur
    let currentInput = [];

    // 3. On √©coute chaque appui sur une touche
    window.addEventListener('keydown', (e) => {
        // On ajoute la touche appuy√©e √† notre liste
        currentInput.push(e.key);

        // On garde seulement les 10 derni√®res touches (la longueur du code)
        // Cela √©vite de stocker des milliers de touches si l'utilisateur reste longtemps
        if (currentInput.length > secretCode.length) {
            currentInput.shift(); // Enl√®ve la premi√®re touche (la plus vieille)
        }

        // 4. On compare : est-ce que ce qu'a tap√© l'utilisateur correspond au code secret ?
        if (JSON.stringify(currentInput) === JSON.stringify(secretCode)) {
            
            // ACTION : C'est ici que l'effet se d√©clenche !
            
            // Affiche une alerte sympa
            alert('üîí MODE D√âVELOPPEUR D√âVERROUILL√â ! \nAttention aux vertiges...');
            
            // Effectue une rotation de la page (Le site se retourne)
            document.body.style.transition = "transform 2s ease-in-out";
            document.body.style.transform = "rotate(180deg)";
            
            // Optionnel : On peut jouer un petit son si vous avez un fichier audio
            // let audio = new Audio('/sons/success.mp3');
            // audio.play();
        }
    });
</script>

</body>
</html>
