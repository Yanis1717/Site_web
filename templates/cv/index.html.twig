    }

    .cv-item:hover {
        border-left: 3px solid #5e84c0; /* La ligne devient bleue au survol */
    }

    /* 4. Petits badges pour les dates */
    .cv-date {
        font-size: 0.85rem;
        font-weight: bold;
        color: #6c757d;
    }
</style>

