    .text-bleu-rt { color: #5e84c0; }
    .bg-bleu-rt { background-color: #5e84c0; color: white; }

    /* 2. Style des titres de section */
    .cv-section-title {
        border-bottom: 2px solid #5e84c0;
        padding-bottom: 5px;
        margin-bottom: 20px;
